<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainMealActivity">

    <TextView
        android:id="@+id/tvChooseMainMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Main Meal:"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <RadioGroup
        android:id="@+id/radioGroupMainMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbBurger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger" />

        <RadioButton
            android:id="@+id/rbFriedChicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fried Chicken" />

        <RadioButton
            android:id="@+id/rbFishFillet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Nuggets" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConfirmMainMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginTop="24dp" />
</LinearLayout>
